---
import "@styles/global.css";
import DocumentHead from "../components/DocumentHead.astro";
const description = "hx-swap example";
---

<html lang="en">
    <DocumentHead
        title={description}
        description={description}
        permalink="http://localhost:4321/hx-swap"
    />
    <body>
        <main class="breakout flow">
            <h1>a wonderful {description}</h1>
            <div class="demo-buttons">
                <button
                    hx-get="/api/greeting"
                    hx-swap="outerHTML"
                    hx-trigger="click"
                >
                    Replace Me (outerHTML)
                </button>

                <button
                    hx-get="/api/greeting"
                    hx-swap="innerHTML"
                    hx-trigger="click"
                >
                    Replace Contents (innerHTML)
                </button>

                <div id="target-div" class="target-area">
                    Target content will appear here...
                </div>

                <button
                    hx-get="/api/greeting"
                    hx-swap="beforeend"
                    hx-target="#target-div"
                    hx-trigger="click"
                >
                    Append Content
                </button>

                <button
                    hx-get="/api/greeting"
                    hx-swap="afterbegin"
                    hx-target="#target-div"
                    hx-trigger="click"
                >
                    Prepend Content
                </button>
            </div>

            <style>
                .htmx-demo {
                    padding: 2rem;
                    border: 1px solid #ddd;
                    border-radius: 0.5rem;
                    margin-bottom: 2rem;
                }

                .demo-buttons {
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                    margin-bottom: 1.5rem;
                }

                .target-area {
                    padding: 1.5rem;
                    background-color: #f1f5f9;
                    border-radius: 0.25rem;
                    margin: 1rem 0;
                    min-height: 100px;
                }

                .note {
                    background-color: #fffbeb;
                    padding: 1rem;
                    border-left: 4px solid #f59e0b;
                    border-radius: 0.25rem;
                    font-size: 0.9rem;
                }
            </style>
        </main>
    </body>
</html>
